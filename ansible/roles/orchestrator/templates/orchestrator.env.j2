# Orchestrator Environment Variables
# Generated by Ansible - do not edit manually

# GitHub Configuration
GITHUB_TOKEN={{ github_token }}
GITHUB_WEBHOOK_SECRET={{ github_webhook_secret }}
ALLOWED_REPOS={{ allowed_repos | join(',') }}

# Preview Configuration
PREVIEW_BASE_URL={{ preview_base_url | default('http://' + server_ip) }}
CLEANUP_TTL_DAYS={{ cleanup_ttl_days | default(7) }}
MAX_CONCURRENT_PREVIEWS={{ max_concurrent_previews | default(10) }}

# Server Configuration
ORCHESTRATOR_PORT={{ orchestrator_port | default(3000) }}
NODE_ENV=production

# Deployment Paths
DEPLOYMENTS_DIR=/opt/preview-deployments
NGINX_CONFIG_DIR=/etc/nginx/preview-configs
DEPLOYMENTS_DB={{ orchestrator_dir }}/deployments.json
