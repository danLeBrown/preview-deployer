{
  "name": "@preview-deployer/orchestrator",
  "version": "0.1.0",
  "description": "Core orchestrator service for preview deployments",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:unit": "jest --config jest.config.js",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "jest --config jest.e2e.config.js --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:all": "pnpm run test:unit && pnpm run test:integration"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "dockerode": "^4.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "handlebars": "^4.7.8",
    "js-yaml": "^4.1.0",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/dockerode": "^4.0.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.0",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.8",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}