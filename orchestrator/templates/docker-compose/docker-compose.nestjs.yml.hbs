services:
  app:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: {{projectSlug}}-pr-{{prNumber}}-app
    ports:
      - "{{exposedAppPort}}:{{appPort}}"
    environment:
      - NODE_ENV=preview
      - PORT={{appPort}}
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:{{appPort}}/health"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s
    deploy:
      resources:
        limits:
          cpus: '0.5'
          memory: 512M
        reservations:
          cpus: '0.25'
          memory: 256M
    depends_on:
      {{dbType}}:
        condition: service_healthy