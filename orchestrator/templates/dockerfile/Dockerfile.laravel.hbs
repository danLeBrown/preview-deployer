# Default Dockerfile for Laravel previews (injected when repo has no Dockerfile)
FROM php:8.2-cli-alpine

RUN apk add --no-cache libzip-dev oniguruma-dev && docker-php-ext-install zip pdo pdo_mysql mbstring

WORKDIR /app

COPY composer.json composer.lock* ./
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer \
  && composer install --no-dev --no-scripts --no-autoloader

COPY . .
RUN composer dump-autoload --optimize

EXPOSE {{appPort}}

CMD ["php", "artisan", "serve", "--host=0.0.0.0", "--port={{appPort}}"]
